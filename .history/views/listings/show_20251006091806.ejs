<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image?.url %>" class="card-img-top show-img" alt="image">
    <div class="card-body">
      <p class="card-text">Owned by:<i> <%= listing.owner ? listing.owner.username : "Unknown owner" %> </i></p>
        <p class="card-text"><%= listing.description %> <br></p>
        <p class="card-text">â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br></p>
        <p class="card-text"><%= listing.location %> <br></p>
        <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br>

<% if(currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="row mt-3">
    <div class="col-3 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100 edit-btn">Edit</a>
    </div>

    <div class="col-3">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark w-100">Delete</button>
      </form>
    </div>
    <br><br>
  </div>
<% } %>



<div class="row mt-3">
  <div class="col-8 offset-2 mb-3">
    <hr>
    <% if (currUser) { %>
    <h4>Leave a review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
      
      <!-- Rating -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input 
          type="range" 
          min="1" 
          max="5" 
          value="3" 
          id="rating" 
          name="review[rating]" 
          class="form-range" 
          required
        >
        <div class="invalid-feedback">
          Please select a rating.
        </div>
      </div><fieldset class="starability-slot">
  <legend>First rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

      <!-- Comment -->
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea 
          name="review[comment]" 
          id="comment" 
          cols="30" 
          rows="5" 
          class="form-control" 
          required
        ></textarea>
        <div class="invalid-feedback">
          Please enter some comment for review.
        </div>
      </div>

      <!-- Submit -->
      <button class="btn btn-outline-dark">Submit</button>
    </form>
<% } %>


    <p><b>All Reviews</b></p>
<div class="row">
  <% for (let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      
        <div class="card-body">
          <h5 class="card-title">
            <% if (review.author) { %>
                @<%= review.author.username %>
              <% } else { %>
                @Deleted User
              <% } %>
            </h5>


          <p class="card-text"><%= review.comment %></p>
           <p class="starability-result card-text" data-rating="<%= review.rating %>">
            </p>
        </div>
        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div>
  <% } %>
</div>


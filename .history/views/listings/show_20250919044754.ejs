<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image?.url %>" class="card-img-top show-img" alt="image">
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br>
        â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
      </p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100 edit-btn">Edit</a>
    </div>
    <div class="col-3">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark w-100">Delete</button>
      </form>
    </div>
    <br><br>
  </div>

  <div class="col-8 offset-2">
    <hr>
    <h4>Leave a review</h4>
    <form action="">
      <div>
        <label for="ratinf" class="form-label">Rating</label>
        <input type="range" min="1" max="2" id="rating" name="review[rating]" >
      </div>
      <div>
        <label for="comment" class="form-label">comment</label>
        <textarea name="review[comment]" id="comment" cols="30" row="5" class="form-control"> </textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
  </div>
</div>

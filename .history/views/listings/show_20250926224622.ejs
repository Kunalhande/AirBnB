<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1><%= listing.title %></h1>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image?.url %>" class="card-img-top show-img" alt="image">
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %> <br>
        â‚¹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
      </p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100 edit-btn">Edit</a>
    </div>
    <div class="col-3">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark w-100">Delete</button>
      </form>
    </div>
    <br><br>
  </div>
<div class="row mt-3">
  <div class="col-8 offset-2 mb-3">
    <hr>
    <h4>Leave a review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
      
      <!-- Rating -->
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input 
          type="range" 
          min="1" 
          max="5" 
          value="3" 
          id="rating" 
          name="review[rating]" 
          class="form-range" 
          required
        >
        <div class="invalid-feedback">
          Please select a rating.
        </div>
      </div>

      <!-- Comment -->
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea 
          name="review[comment]" 
          id="comment" 
          cols="30" 
          rows="5" 
          class="form-control" 
          required
        ></textarea>
        <div class="invalid-feedback">
          Please enter some comment for review.
        </div>
      </div>

      <!-- Submit -->
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr>
    <p><b>All listing</b></p>
<div class="row">
  <% for (let review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      
        <div class="card-body">
          <h5 class="card-title">kunal hande</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"> <%= review.rating %> Stars</p>
        </div>
        <form method="POST" action="/listings/<%= listing._id %>>/reviews/<%= review._id %> ? method=DELETE" class="mb-3">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div>
  <% } %>
</div>


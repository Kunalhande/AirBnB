<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h1>All Details</h1>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image?.url %>" class="card-img-top show-img" alt="image">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br>
        <%= listing.description %> <br>
        â‚¹ <%= listing.price.toLocaleString("en-IN") %> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
      </p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3 offset-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark w-100 edit-btn">Edit</a>
    </div>
    <div class="col-3">
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark w-100">Delete</button>
      </form>
    </div>
    <br><br>
  </div>
</div>
